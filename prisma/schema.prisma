generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserType {
  TEACHER
  STUDENT
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String    @unique
  password String
  type     UserType
  Otp      Otp[]
  MCQTest  MCQTest[]
  WrittenTest  WrittenTest[]
}

model MCQTest {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  createrId    String        @db.ObjectId @map("userId")
  creater      User          @relation(fields: [createrId], references: [id])
  title     String
  subject   String
  publish   Boolean
  questions MCQQuestion[]
}

model WrittenTest {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  createrId    String        @db.ObjectId @map("userId")
  creater      User          @relation(fields: [createrId], references: [id])
  title     String
  subject   String
  publish   Boolean

}

model WrittenQuenstion {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  question         String
  marks            Int
  optionalQuestion String
}

model MCQQuestion {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  MCQTest  MCQTest  @relation(fields: [testId], references: [id])
  testId   String   @db.ObjectId
  question String
  marks    Int
  choices  String[]
}

model Otp {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  User   User   @relation(fields: [userId], references: [id])
  code   String
  userId String @db.ObjectId
}
