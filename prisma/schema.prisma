generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserType {
  STUDENT
  TEACHER
}

enum TestType {
  MCQ
  WRITTEN
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  type     UserType
  username String
  email    String    @unique
  password String
  Otp      Otp[]
  MCQTest  MCQTest[]
}

model MCQTest {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  userId    String        @db.ObjectId
  user      User          @relation(fields: [userId], references: [id])
  questions MCQQuestion[]
}

model WrittenQuenstion {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  question         String
  marks            Int
  optionalQuestion String
}

model MCQQuestion {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  MCQTest  MCQTest  @relation(fields: [testId], references: [id])
  testId   String   @db.ObjectId
  title    String
  subject  String
  question String
  marks    Int
  choices  String[]
  publish  Boolean
}

model Otp {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  User   User   @relation(fields: [userId], references: [id])
  code   String
  userId String @db.ObjectId
}
